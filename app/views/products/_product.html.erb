<div id="<%= dom_id product %>">
  <div class="d-flex align-items-center responsive-width">
    <div class="col-10">
      <table class="table table-bordered text-center responsive-width shadow-sm">
        <tr class="table-head-background">
          <th>Código del modelo</th>
          <th>Descripción</th>
        </tr>
        <tr class="table-row-background">
          <td style="width: 20%; padding: 2rem;"><%= product.code %></td>
          <td style="width: 80%; padding: 2rem;"><%= product.description %></td>
        </tr>
      </table>
    </div>

    <div class="col-2 text-center">
      <%= image_tag("product-image.svg", :alt => "product-image", :class => "mb-3") %>
    </div>
  </div>

  <div class="mt-3">
    <%= image_tag("horizontal-divider.svg", :alt => "horizontal-divider", :width => "95%", :class => "mb-3") %>
  </div>

  <div class="d-flex mt-3 align-items-center">
    <div class="col-4 pt-2">
      <div clas="mb-5">
        <table class="table table-bordered text-center shadow-sm">
          <tr class="table-head-background">
            <th>Ruta asociada</th>
          </tr>
          <tr class="table-row-background">
            <td style="width: 20%; padding: 1rem;">Ruta 1</td>
          </tr>
        </table>
      </div>

      <div class="mt-4 pt-2">
        <table class="table table-bordered text-center shadow-sm">
          <tr class="table-row-background">
            <th style="padding: 1rem;">Valor de venta</th>
            <td style="padding: 1rem;">$ <%= product.price %></td>
          </tr>
        </table>
      </div>

      <div class="mt-4 pt-2">
        <table class="table table-bordered text-center shadow-sm">
          <tr class="table-row-background">
            <th style="width: 58%; padding: 1rem;">Costo de producción</th>
            <td style="width: 42%; padding: 1rem;">$ <%= product.cost %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="col-8 mx-4">
      <%= image_tag("graph-pic.png", :alt => "graph-pic", :width => "90%", :height => "80%", :class => "mb-3 shadow-sm border rounded-2") %>
    </div>
  </div>

  <div class="d-flex mt-5 align-items-center justify-content-end" style="margin-right: 5%;">
    <%= link_to "Regresar", products_path, class: "btn-secundario" %>
  </div>
</div>
