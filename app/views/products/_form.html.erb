<div class="responsive-width">
  <%= form_with(model: product) do |form| %>
    <%= render 'shared/errors', obj: @product %>

    <div class="d-flex mt-5">
      <div class="col-6">
        <div>
          <%= form.label "Código", style: "display: block" %>
          <%= form.text_field :code, style: "display: block", class: "form-control" %>
        </div>

        <br>

        <div>
          <%= form.label "Precio de unidad", style: "display: block" %>
          <%= form.text_field :price, class: "form-control", placeholder: "$" %>
        </div>

        <br>

        <div>
          <%= form.label "Costo de producción", style: "display: block" %>
          <%= form.text_field :cost, class: "form-control", placeholder: "$" %>
        </div>
      </div>

      <div class="col-6 mx-2">
        <%= form.label "Descripción", style: "display: block" %>
        <%= form.text_area :description, class: "form-control mt-1", rows: "8" %>
      </div>
    </div>

    <div class="d-flex mt-5 align-items-center justify-content-end">
      <%= link_to "Regresar", products_path, class: "btn-secundario" %>&nbsp;&nbsp;
      <%= form.submit "Crear producto", class: "btn-primario" %>
    </div>
  <% end %>
</div>
