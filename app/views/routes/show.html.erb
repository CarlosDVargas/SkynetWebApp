<%= render "/shared/navbar" %>

<div class="h-100 w-100 secondary-background">
  <div class="container mt-5">
    <div class="container mt-4 mx-auto">
      <div style="width: 95%;">
        <%= render "/shared/messages" %>
      </div>
    </div>

    <%# -- Titulo de ruta y boton de eliminar -- %>
    <div>
      <%= image_tag("route-details-headline.svg", :alt => "routesDetails-title", :width => "83%", :class => "mb-3") %>

      &nbsp;&nbsp;&nbsp;

      <%= link_to "#", class: "btn-eliminar" do %>
        <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Eliminar ruta
      <% end %>
    </div>
    <%# ------------- %>

    <div class="mt-4 mb-5">
      <%= render @route %>
    </div>

    <div class="d-flex mt-5 pb-5 align-items-center justify-content-end" style="margin-right: 4%;">
      <%= link_to "Regresar", routes_path, class: "btn-secundario" %>
    </div>
  </div>
</div>
