<div class="responsive-width mt-4">
  <%= form_with(model: batch) do |form| %>
    <%= render 'shared/errors', obj: @batch %>
    <div>
      <div>
        <div>
          <%= form.label "Producto", style: "display: block" %>
          <%= form.select :product_id, options_for_select(@products.collect { |p| [p.code, p.id] }), {}, class: "form-select" %>
        </div>

        <br>

        <div>
          <%= form.label "Operación", style: "display: block" %>
          <%= form.select :operation_id, options_for_select(@operations.collect { |o| [o.code, o.id] }), {}, class: "form-select" %>
        </div>

        <br>

        <div>
          <%= form.label "Estado de operación", style: "display: block" %>
          <%= form.text_field :current_operation, class: "form-control" %>
        </div>

        <br>

        <div>
          <%= form.label "Unidades", style: "display: block" %>
          <%= form.number_field :units, class: "form-control" %>
        </div>

        <div class="d-flex mt-5 align-items-center justify-content-end">
          <%= link_to "Regresar", :back, class: "btn-secundario" %>&nbsp;&nbsp;
          <%= form.submit "Crear lote", class: "btn-primario" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
