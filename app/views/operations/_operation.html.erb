<div id="<%= dom_id operation %>">
  <div class="d-flex align-items-center responsive-width">
    <div class="col-12">
      <table class="table table-bordered text-center responsive-width shadow-sm">
        <tr class="table-head-background">
          <th>Código de la operación</th>
          <th>Descripción</th>
          <th>Nª Lotes asociados</th>
        </tr>
        <tr class="table-row-background">
          <td style="width: 25%; padding: 1.2rem;"><%= operation.code %></td>
          <td style="width: 50%; padding: 1.2rem;"><%= operation.description %></td>
          <td style="width: 25%; padding: 1.2rem;"><%= operation.batches.count %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="mt-3">
    <%= image_tag("horizontal-divider.svg", :alt => "horizontal-divider", :width => "97%", :class => "mb-3") %>
  </div>

  <div class="d-flex align-items-center justify-content-center mt-4 responsive-width">
    <div class="col-6">
      <%= image_tag("personal-encargado.svg", :alt => "routesDetails-title", :class => "mb-3") %>
    </div>
    <div class="col-6 container text-end">
      <%= link_to "#", class: "btn-agregar" do %>
        <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Asignar personal
      <% end %>
    </div>
  </div>

  <div class="d-flex mt-3 align-items-center responsive-width ">
    <table class="table table-bordered text-center responsive-width shadow-sm">
      <tr class="table-head-background">
        <th>Nombre completo</th>
        <th>Cargo</th>
        <th>Acciones</th>
      </tr>

      <tr class="table-row-background">
        <td style="width: 25%; padding: 1rem;">Alina Rodríguez</td>
        <td style="width: 25%; padding: 1rem;">Ingeniera en planta</td>
        <td style="width: 25%; padding: 1rem;">
          <%= link_to "Detalles", "#", class: "btn-ver" %>
          <%= link_to "Desasignar", "#", class: "btn-eliminar" %>
        </td>
      </tr>
    </table>
  </div>

  <div class="mt-5">
    <%= image_tag("horizontal-divider.svg", :alt => "horizontal-divider", :width => "97%", :class => "mb-3") %>
  </div>

  <div class="d-flex align-items-center justify-content-center mt-4 responsive-width">
    <div class="col-6">
      <%= image_tag("lotes-asociados.svg", :alt => "routesDetails-title", :class => "mb-3") %>
    </div>
    <div class="col-6 container text-end">
      <%= link_to new_batch_path, class: "btn-agregar" do %>
        <i class="bi bi-plus-circle"></i>&nbsp;&nbsp;Agregar lote
      <% end %>
    </div>
  </div>

  <div class="d-flex align-items-center responsive-width mt-3">
    <div class="col-12">
      <table class="table table-bordered text-center responsive-width shadow-sm">
        <tr class="table-head-background">
          <th>Código de lote</th>
          <th>Unidades asociadas</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
        <% @batches.each do |batch| %>
          <tr class="table-row-background">
            <td style="width: 23%; padding: 1.2rem;"><%= batch.code %></td>
            <td style="width: 23%; padding: 1.2rem;"><%= batch.units %></td>
            <td style="width: 23%; padding: 1.2rem;"><%= batch.current_operation %></td>
            <td style="width: 31%; padding: 1.2rem;">
              <%= link_to "Detalles", batch_path(batch), class: "btn-ver" %>
              <%= link_to "Modificar", "#", class: "btn-modificar" %>
              <%= link_to "Eliminar", batch_path(batch), data: { 'turbo-method': :delete, 'turbo-confirm': '¿Estás seguro(a) que deseas eliminar este lote?' }, class: "btn-eliminar" %>
            </td>
          </tr>
        <% end %>
      </table>

      <%# -- paginacion -- %>
      <% unless @batches.empty? || @batches.nil? %>
        <div class="flickr_pagination my-5 responsive-width">
          <%= will_paginate @batches, :container => false %>
        </div>
      <% end %>
      <%# ------------- %>
    </div>
  </div>
</div>