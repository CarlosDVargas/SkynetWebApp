<div id="<%= dom_id operation %>">
  <div class="d-flex align-items-center responsive-width">
    <div class="col-12">
      <table class="table table-bordered text-center responsive-width shadow-sm">
        <tr class="table-head-background">
          <th>Número de la operación</th>
          <th>Descripción</th>
          <th>Nª Lotes asociados</th>
        </tr>
        <tr class="table-row-background">
          <td style="width: 25%; padding: 1.2rem;"><%= operation.code %></td>
          <td style="width: 50%; padding: 1.2rem;"><%= operation.description %></td>
          <td style="width: 25%; padding: 1.2rem;"><%= operation.batches.count %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="mt-3">
    <%= image_tag("horizontal-divider.svg", :alt => "horizontal-divider", :width => "97%", :class => "mb-3") %>
  </div>
  <div class="d-flex align-items-center responsive-width">
    <div class="col-12">
      TABLA
    </div>
  </div>
  <div class="mt-3">
    <%= image_tag("horizontal-divider.svg", :alt => "horizontal-divider", :width => "97%", :class => "mb-3") %>
  </div>
  <div class="d-flex align-items-center responsive-width">
    <div class="col-12">
      <table class="table table-bordered text-center responsive-width shadow-sm">
        <tr class="table-head-background">
          <th>Código de lote</th>
          <th>Unidades asociadas</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
        <% @operation.batches.each do |batch| %>
          <tr class="table-row-background">
            <td style="width: 23%; padding: 1.2rem;"><%= batch.code %></td>
            <td style="width: 23%; padding: 1.2rem;"><%= batch.units %></td>
            <td style="width: 23%; padding: 1.2rem;"><%= batch.current_operation %></td>
            <td style="width: 31%; padding: 1.2rem;">
              <%= link_to "Detalles", batch_path(batch), class: "btn-ver" %>
              <%= link_to "Modificar", edit_batch_path(batch), class: "btn-modificar" %>
              <%= link_to "Eliminar", batch_path(batch), data: { 'turbo-method': :delete, 'turbo-confirm': '¿Estás seguro(a) que deseas eliminar este lote?' }, class: "btn-eliminar" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>