<%= form_with(model: operation) do |form| %>
  <%= render 'shared/errors', obj: @operation %>

  <div class="d-flex mt-5 align-items-center">

    <div class="col-6">
      <div>
        <%= form.label "Código", style: "display: block" %>
        <%= form.text_field :code, style: "display: block", class: "form-control mt-1" %>
      </div>
    </div>

    <div class="col-6 mx-2">
      <%= form.label "Descripción", style: "display: block" %>
      <%= form.text_field :description, class: "form-control mt-1", rows: "8" %>
    </div>
  </div>


  <div class="d-flex mt-5 align-items-center justify-content-end">
    <%= link_to "Regresar", :back, class: "btn-secundario" %>&nbsp;&nbsp;
    <%= form.submit "Crear operación", class: "btn-primario" %>
  </div>
<% end %>
